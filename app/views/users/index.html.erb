<!-- All Users-->
<div class="container-book bg-grey ">
  <h1><%= t('Listing_Users') %></h1>
</div>

<hr/>

<table class="table table-hover">
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="4"></th>
    </tr>
  </thead>  

  <tbody>
    <% @users.each do |f| %>
      <tr>
        <td><%= f.email %></td>
         <td><%= link_to t('Show'), f, class: 'btn btn-mini btn-primary' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
