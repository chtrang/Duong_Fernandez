<%= simple_form_for(@book) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :author %>
    <%= f.input :synopsis, as: :text, input_html: {rows: 10, cols: 10} %>
    <%= f.input :note %>

  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
