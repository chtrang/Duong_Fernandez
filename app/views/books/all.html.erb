<!-- All Books-->
<div class="container-book bg-grey ">
  <h1><%= t('Listing_Books') %></h1>
</div>

<%= render 'books' %>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.title %></td>
        <td><%= book.author %></td>
        <td><%= link_to t('Show'), book, class: 'btn btn-mini btn-primary' %></td>
        <td><%= link_to t('Edit'), edit_book_path(book), class: 'btn btn-default' %></td>
        <td><%= link_to t('Destroy'), {controller: "books", action: "delete", :ref_book => book.id}, data: { confirm: t('destroy_confirmation') },:class => 'btn btn-mini btn-danger'  %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to t('New_Book'), new_book_path, class: 'btn btn-default' %>